<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:designerLibrary="clr-namespace:DesignerLibrary"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="DesignerLibrary.Scroll">
    <ScrollViewer HorizontalScrollBarVisibility="Visible">
        <designerLibrary:MyCustomControl Width="600" Height="600" GridSizeX="20" GridSizeY="20" GridElementSize="1" DrawMode="Lines" GridColor="LightGray"/>
    </ScrollViewer>
</UserControl>
