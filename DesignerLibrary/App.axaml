<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DesignerLibrary.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.IDE.ToolKit/Themes/ScalingContainer.axaml"/>
        <StyleInclude Source="avares://Avalonia.IDE.ToolKit/Themes/VisualMesh.axaml"/>
    </Application.Styles>
</Application>